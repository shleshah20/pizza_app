<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs">
        <form action="/register" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" >
            <%if(messages.error){%>
            <span class="text-red-500 text-small"><%=messages.error%></span>
            <%}%>
            <div class="mb-4">
                <label for="name" class="block text-gray-700 font-bold mb-2" for="name">Name</label>
                <input id="name" name="name" type="text" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Name" value="<%=messages.name%>">
            </div>
            <div class="mb-4">
                <label for="email-address" class="block text-gray-700 font-bold mb-2" for="username">Email address</label>
                <input id="email-address" name="email" type="email" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Email address" value="<%=messages.email%>">
            </div>
            <div class="mb-6">
                <label for="password" class="block text-gray-700 font-bold mb-2" for="password">Password</label>
                <input id="password" name="password" type="password" required  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Password">
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="btn-primary py-2 px-4 text-sm font-medium rounded-full text-white font-bold  focus:outline-none focus:shadow-outline">
                    Register
                </button>    
                <a href="/login" class="inline-block align-baseline font-bold text-sm">
                   Already have account?
                </a>
            </div>
          </form>
        </div>
</section>